@model IEnumerable<Bangazon.Models.Product>

@{
    ViewData["Title"] = "IndexOfUserProducts";
}

<h1>My Products</h1>

<p>
    <a asp-action="Create">Sell a Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Listed On
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Product Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", "Products", new { id = item.ProductId }, new { area = "" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink(item.ProductType.Label, "Index", "Products", new { id = item.ProductTypeId }, new { area = "" })
            </td>
            <td>
                @*Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                @*Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id=item.ProductId })</button>
            </td>
        </tr>
}
    </tbody>
</table>
